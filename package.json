{
  "scripts": {
    "lint:eslint": "eslint --ext .js,.html,.ts . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html,.ts . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.{js,ts}\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.{js,ts}\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "storybook": "start-storybook --node-resolve --watch --open",
    "storybook:build": "build-storybook",
    "start:build": "es-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "build": "tsc -w -p tsconfig.build.json",
    "start": "es-dev-server --app-index index.html --node-resolve --open --watch"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-typescript": "^7.9.0",
    "@open-wc/building-rollup": "^0.21.0",
    "@open-wc/demoing-storybook": "^1.0.1",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.5.0",
    "eslint": "^6.1.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.4",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-lit-css": "^2.0.1",
    "rollup-plugin-livereload": "^1.1.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --quiet",
      "prettier --write",
      "git add"
    ]
  },
  "name": "open-coin",
  "version": "0.0.0",
  "description": "Webcomponent open-coin following open-wc recommendations",
  "author": "open-coin",
  "license": "MIT",
  "dependencies": {
    "lit-element": "^2.3.1",
    "lit-html": "^1.0.0"
  }
}
